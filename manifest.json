{
    "name": "Color-picker",
    "description": "A color picker extension",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "clipboardWrite"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "/images/picker16.png",
        "32": "/images/picker32.png",
        "48": "/images/picker48.png"
    }
}